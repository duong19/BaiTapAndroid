<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <TextView
        android:id="@+id/text_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:text="Add new file"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_subject"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="Title : "
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/edit_name_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:layout_marginLeft="12dp"
        android:inputType="text"
        android:hint="Enter your title"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name_file"
        android:layout_marginLeft="12dp"
        android:text="Content : "
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/edit_content_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_content"
        android:layout_margin="12dp"
        android:hint="Enter your content"
        android:inputType="text"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_content_file"
        android:layout_toLeftOf="@+id/btn_cancel"
        android:background="@android:color/transparent"
        android:text="CREATE"
        android:textSize="12sp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_content_file"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:text="CANCEL"
        android:textSize="12sp"
        android:textColor="#000000"/>

</RelativeLayout>